<p id="notice"><%= notice %></p>

<h2>Camps</h2>
<%= link_to 'New Camp', new_camp_path %>
<table id="myTable">
  <input type="text" id="myInput" onkeyup="myFunctioncamp()" placeholder="Search by time slot" title="Type in a time slot">
  
  <thead>
    <tr>
      <th id= "myTablehead">Curriculum</th>
      <th id= "myTablehead">Location</th>
      <th id= "myTablehead">Cost</th>
      <th id= "myTablehead">Start date</th>
      <th id= "myTablehead">End date</th>
      <th id= "myTablehead">Time slot</th>
      <th id= "myTablehead">Max students</th>
      <th id= "myTablehead">Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @camps.each do |camp| %>
      <tr>
        <td><%= camp.curriculum_id %></td>
        <td><%= camp.location_id %></td>
        <td><%= camp.cost %></td>
        <td><%= camp.start_date %></td>
        <td><%= camp.end_date %></td>
        <td><%= camp.time_slot %></td>
        <td><%= camp.max_students %></td>
        <td><%= camp.active %></td>
        <td><%= link_to 'Show', camp %></td>
        <td><%= link_to 'Edit', edit_camp_path(camp) %></td>
        <td><%= link_to 'Destroy', camp, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>









