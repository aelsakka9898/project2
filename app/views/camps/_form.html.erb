<div class="form-style-8main" >
<div class="form-style-8">
<%= simple_form_for(@camp) do |f| %>
  <%= f.error_notification %>
  <div class="row">
<div class="form-style-8">

      <%= f.input :location_id, collection: Location.alphabetical.active.to_a, include_blank: true %>
      <%= f.input :curriculum_id, collection: Curriculum.alphabetical.active.to_a, include_blank: true %>
      <%= f.input :cost, label_html: { class: 'active' } %>
      <%= f.input :time_slot, collection: [["Morning","am"],["Afternoon","pm"]], include_blank: true %>
      
      <%= f.date_select :start_date, label_html: { class: 'active'} %>
      <%= f.label :start_date %>
      <%= f.date_select :end_date, label_html: { class: 'active'} %>
       <%= f.label :end_date %>
      <%= f.input :max_students, label_html: { class: 'active' } %>
      <%= f.input :active %>
	  <%# f.input :active, as: :radio_buttons %>
    </div>
  </div>
  <div class="row">
    <div class="form-actions col s8">
      <%= f.button :submit %>
    </div>
  </div>
<% end %>


