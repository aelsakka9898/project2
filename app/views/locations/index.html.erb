<div class="index">
<p id="notice"><%= notice %></p>

<h2>Locations</h2>
<%= link_to 'New Location', new_location_path %>

<table id="myTable">
  <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search by name" title="Type in name">
  
  <thead>
    <tr>
      <th id= "myTablehead">Name</th>
      <th id= "myTablehead">Street 1</th>
      <th id= "myTablehead">Street 2</th>
      <th id= "myTablehead">City</th>
      <th id= "myTablehead">State</th>
      <th id= "myTablehead">Zip</th>
      <th id= "myTablehead">Max capacity</th>
      <th id= "myTablehead">Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.name %></td>
        <td><%= location.street_1 %></td>
        <td><%= location.street_2 %></td>
        <td><%= location.city %></td>
        <td><%= location.state %></td>
        <td><%= location.zip %></td>
        <td><%= location.max_capacity %></td>
        <td><%= location.active %></td>
        <td><%= link_to 'Show', location %></td>
        <td><%= link_to 'Edit', edit_location_path(location) %></td>
        <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>







