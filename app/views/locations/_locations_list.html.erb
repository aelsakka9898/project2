<div class="index">
  <p id="notice"><%= notice %></p>
  <h3><%= state %> Locations</h3>

  <table id="myTable">
  <input type="text" id="myInput" onkeyup="myFunctionlocation()" placeholder="Search by name" title="Type in name">
  
    <thead>
      <tr>
        <th id= "myTablehead">Name</th>
        <th id= "myTablehead">Address</th>
        <th id= "myTablehead">Max Capacity</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% locations.each do |location| %>
        <tr>
          <td><%= link_to location.name, location %></td>
          <td><%= render :partial => "partials/address_info", locals: {location: location} %></td>
          <td><%= location.max_capacity %></td>
          <td><%= link_to 'Edit', edit_location_path(location), :class=>"btn waves-effect waves-light" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <span class="paginate">
    <%= will_paginate locations, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
  </span>